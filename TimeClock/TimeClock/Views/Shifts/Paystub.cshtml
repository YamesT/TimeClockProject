@model IEnumerable<TimeClock.Models.Shift>

@{
    ViewBag.Title = "Paystub";
}

<h2 style="color:white">Paystub</h2>

<p style="color:white">


    Total Hours: @ViewBag.TotalTime &nbsp;
    Hourly Rate: $@ViewBag.HourlyRate &nbsp;
    Total Pay: $@ViewBag.TotalPay



</p>


<table class="table" style="color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
